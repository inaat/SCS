<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/user_profile_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_marginTop="@dimen/_10sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/drawer_logo"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentRight="true"
                android:src="@drawable/placeholder_user"
                    android:layout_marginRight="@dimen/_30sdp"
                    />


                <TextView
                    android:id="@+id/hi_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Hello"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="David Friedman"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#ffffff"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_below="@id/hi_text"
                    app:layout_constraintStart_toStartOf="parent"
                     />




            </RelativeLayout>


    </LinearLayout>
  <LinearLayout
      android:layout_below="@id/user_profile_home"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginTop="@dimen/_5sdp"
      android:gravity="center"
      android:background="@color/transparent">

      <androidx.cardview.widget.CardView
          android:layout_width="@dimen/_110sdp"
          android:layout_height="@dimen/_110sdp"
          app:cardCornerRadius="@dimen/_10sdp"
          android:layout_margin="10dp"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

              <ImageView
                  android:layout_width="@dimen/_50sdp"
                  android:layout_height="@dimen/_50sdp"
                  android:layout_gravity="center"
                  android:background="@drawable/ic_attendance" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/bebas_neue"
                  android:text="80.00%"
                  android:layout_gravity="center"
                  android:textSize="@dimen/_20sdp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/source_sans_pro"
                  android:text="Attendance"
                  android:textSize="@dimen/_16sdp" />

          </LinearLayout>


    </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:layout_width="@dimen/_110sdp"
          android:layout_height="@dimen/_110sdp"
          app:cardCornerRadius="@dimen/_10sdp"
          android:layout_margin="10dp"
          >
          <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">

              <ImageView
                  android:layout_width="@dimen/_50sdp"
                  android:layout_height="@dimen/_50sdp"
                  android:layout_gravity="center"
                  android:background="@drawable/ic_fees_due" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/bebas_neue"
                  android:text="Rs 6400"
                  android:layout_gravity="center"
                  android:textSize="@dimen/_20sdp" />

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/source_sans_pro"
                  android:text="Fees Due"
                  android:textSize="@dimen/_16sdp" />

          </LinearLayout>


      </androidx.cardview.widget.CardView>




  </LinearLayout>
</RelativeLayout>